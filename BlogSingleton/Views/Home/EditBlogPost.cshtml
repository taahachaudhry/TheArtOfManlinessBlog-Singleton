@model BlogSingleton.Models.BlogPost
<h2>Edit Blog Post</h2>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-offset-3 col-md-6">
            <form method="post">
                @Html.HiddenFor(x => x.ID)
                <div class="form-group">
                    <label class="col-sm-2 control-label">Author</label>
                    <div class="col-sm-10">
                        <input type="text" value="@Model.Author" class="form-control" name="author">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" value="@Model.Title" class="form-control" name="title">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Post</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="post" rows="7" cols="100">@Model.Post</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Image</label>
                    <div class="col-sm-10">
                        <input type="text" value="@Model.Image" class="form-control" name="image">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="submit" value="Save" class="btn btn-block btn-primary" />
                    </div>
                </div>
            </form>
            <form method="post" action="/Home/Delete/@Model.ID">
                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="submit" value="Delete" class="btn btn-block btn-danger" /><br />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
