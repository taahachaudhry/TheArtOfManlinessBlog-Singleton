@model BlogSingleton.Models.HomeIndexVM

<br /><div class="panel panel-default">
    <div class="panel-body">
        <div style="text-align:center">
            <h1>@Model.BlogPosts[0].Title</h1>
        </div>
            <h3>@Model.BlogPosts[0].Post</h3>
            <a class="btn btn-med btn-primary pull-right" href="/Home/Edit/@Model.BlogPosts[0].ID">Edit</a>
    </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div style="font-weight:700; font-size:large"><p>Comments:</p></div>
            @foreach (var comment in @Model.Comments)
            {
                <blockquote>
                    <strong>"@comment.Message"</strong><footer>@comment.Name</footer>
                </blockquote>
            }
            <a class="btn btn-med btn-success pull-right" href="/Home/AddReview/@Model.BlogPosts[0].ID">Add Review</a>
        </div>
    </div>


